<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bk_profile"
    android:layout_width="match_parent"
    android:layout_gravity="center_vertical"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send this code to your friend:"
        android:textColor="#f64672"
        android:textSize="25sp"
        android:fontFamily="sans-serif-condensed-medium"
        android:shadowColor="@color/black"
        android:textAlignment="center"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:id="@+id/codeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123456"
        android:textColor="#FBFBF9"
        android:textStyle="bold"
        android:textSize="28sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/waitingTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waiting for opponent to join…"
        android:textColor="#FFC107"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/copyBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#1F0124"
        android:backgroundTint="#f64672"
        android:text="Copy Code"/>

    <Button
        android:id="@+id/shareBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share via…"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#1F0124"
        android:backgroundTint="#f64672"
        android:layout_marginTop="8dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginVertical="12dp"/>

    <Button
        android:id="@+id/joinGameBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Join a Game with Code"
        android:textStyle="bold"
        android:textColor="#1F0124"
        android:backgroundTint="#f64672"/>
</LinearLayout>
